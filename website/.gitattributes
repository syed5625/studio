# -------------------------------------------------
# Line ending normalization (Django best practice)
# -------------------------------------------------

* text=auto

# Python source files
*.py text eol=lf

# Django templates
*.html text eol=lf

# JavaScript & CSS
*.js   text eol=lf
*.css  text eol=lf

# Data / config files
*.json text eol=lf
*.yml  text eol=lf
*.yaml text eol=lf
*.xml  text eol=lf
*.ini  text eol=lf
*.cfg  text eol=lf
*.env  text eol=lf
*.po   text eol=lf
*.mo   text eol=lf

# Shell scripts
*.sh text eol=lf

# Windows scripts
*.bat text eol=crlf
*.cmd text eol=crlf

# Binary files (never modify line endings)
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.svg binary
*.ico binary
*.pdf binary
*.zip binary
*.tar binary
*.gz  binary
*.mp4 binary
*.webm binary
*.woff binary
*.woff2 binary
